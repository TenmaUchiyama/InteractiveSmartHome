{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "importHelpers": true,
    "strict": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@root/*": ["."],
      "@/*": ["./src/*"],
      "@debugger/*": ["./src/debugger/*"],
      "@block/*": ["./src/actions/action-blocks/*"],
      "@types/*": ["./src/types/*"],
      "@mqtt-bridge": ["./src/device-bridge/MqttBridge.ts"],
      "@database": ["./src/database-connector/mongodb.ts"]
    },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true
  }
}
